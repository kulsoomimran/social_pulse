{
  "compilerOptions": {
    /* File Layout */
    "rootDir": "./src",
    "outDir": "./dist",

    /* Environment Settings */
    "module": "commonjs", 
    "target": "es2020", 
    "lib": ["es2020"],
    "types": ["node", "express"],

    /* Other Outputs */
    "sourceMap": true,

    /* Strictness */
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
